@inherits LayoutComponentBase

<MudThemeProvider Theme="@Potatoes"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <!-- App Bar -->
    <MudAppBar Color="Color.Primary" Fixed="true" Dense="@_dense" Elevation="@_elevation">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
                       OnClick="@ToggleDrawer"/>
        <MudText Typo="Typo.h5" Class="ml-3">Bastion Web UI</MudText>
        <MudSpacer/>


        <MudMenu Icon="@Icons.Material.Filled.AccountCircle"
                 Color="Color.Default"
                 AriaLabel="Open user menu">
            <MudMenuItem Label="My account" />
            <MudMenuItem Label="Logout" Href="/logout" />
            <MudMenuItem Label="Support"/> 
        </MudMenu>
    </MudAppBar>

    <!-- Drawer -->
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="1" Variant="DrawerVariant.Responsive">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">My App</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Href="/home">Servers</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/dashboard">Dashboard</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <!-- Main Content -->
    <MudMainContent Class="pt-16 px-16">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen;
    private readonly bool _dense = false;
    private readonly int _elevation = 4;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }

    private readonly MudTheme Potatoes = new()
    {
        Typography = new Typography
        {
            Default = new DefaultTypography
            {
                FontFamily = new[] { "Space Grotesk", "Helvetica", "Arial", "sans-serif" }
            }
        }
    };

}
